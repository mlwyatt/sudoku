= form_for @user, data: { remote: true }, html: { style: 'display:inline' } do |f|
  .modal-content
    %h5= "Editing #{ @user.first_name } #{ @user.last_name }"
    = render 'users/partials/form', f: f
  .modal-footer
    = link_to 'Cancel', '#', onclick: "closeModal('#{controller_name}')", class: 'right btn-flat'
    = f.submit class: 'right btn-flat-primary waves-effect btn-flat', id: 'update_user'
